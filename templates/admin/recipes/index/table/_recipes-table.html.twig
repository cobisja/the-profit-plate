<div class="row g-7"
     data-controller="admin--shared--modal-form admin--shared--table-filter"
     data-action="admin--shared--modal-filter:filter_applied->admin--shared--table-updater#applyFilter admin--shared--modal-filter:filter_reset->admin--shared--table-updater#clearFilter"
>
    <div class="col-lg-6 col-xl-12">
        <div class="card mb-6">
            <div class="card-header border-0 pt-6">
                <!--begin::Card toolbar-->
                <div class="card-toolbar mx-auto">
                    <!--begin::Toolbar-->
                    {% include 'shared/_modal-filter.html.twig' with {
                        filter_title: 'Recipe Type:',
                        filter_column_index: 2,
                        options: recipeTypes|map(p => p.name)
                    } %}
                    {% include 'shared/_export-button.html.twig' with {
                        export_options: {
                            excel: 'Export as Excel',
                            csv: 'Export as CSV',
                            pdf: 'Export as PDF'
                        }
                    } %}
                    <a href="{{ path('app_admin_recipes_new') }}"
                       class="btn btn-sm btn-light-primary"
                    ><i class="ki-duotone ki-plus fs-2"></i>New Recipe</a>
                    <!--end::Toolbar-->
                </div>
                <!--end::Card toolbar-->
                {% include 'shared/_flash-messages.html.twig' %}
            </div>
            <div class="card-body pt-9 pb-9">
                <div class="table-responsive">
                    <table class="table table-row-bordered align-middle gy-5" id="products-table">
                        <thead>
                        <tr class="fw-semibold fs-6 text-muted">
                            <th>Name</th>
                            <th class="no-export">Picture</th>
                            <th>Type</th>
                            <th>Ingredients</th>
                            <th>Expenses</th>
                            <th>Profit</th>
                            <th>Status</th>
                            <th>Updated at</th>
                            <th scope="col" class="no-export col-3"></th>
                        </tr>
                        </thead>
                        <tbody data-admin--shared--table-updater-target="updatableContent">
                        {% include 'admin/recipes/index/table/_recipes.html.twig' with { recipes } %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!--start::Shared Modal container -->
    {% include 'shared/_modal-form.html.twig' with { modal_title: 'Recipe'} %}
    <!--end::Shared Modal container -->
</div>