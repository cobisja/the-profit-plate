{% extends 'layouts/admin.html.twig' %}

{% block title %}FBC - Conversion Factors{% endblock %}

{% block page_title %}
    {% include 'layouts/layout/partials/_page-title.html.twig' with {
        title: 'THE PROFIT PLATE',
        breadcrumbs: [
            { 'Home': path('app_admin_dashboard') },
            'Conversion Factors'
        ]
    } %}
{% endblock %}

{% block content %}
    <div class="row g-7"
         data-controller="admin--shared--table-updater admin--shared--modal-form"
         data-action="admin--shared--modal-form:item-added->admin--shared--table-updater#addRow admin--shared--modal-form:item-updated->admin--shared--table-updater#updateRow admin--shared--delete-item-button:item-deleted->admin--shared--table-updater#deleteRow"
    >
        <div class="col-lg-6 col-xl-12">
            <div class="card mb-6">
                <div class="card-header">
                    <h3 class="card-title">Conversion Factors</h3>
                    <div class="card-toolbar">
                        <a href="{{ path('app_admin_conversion_factors_new') }}"
                           class="btn btn-sm btn-light-primary"
                           data-action="admin--shared--modal-form#openModal"
                        >New Conversion Factor</a>
                    </div>
                    {% include 'shared/_flash-messages.html.twig' %}
                </div>
                <div class="card-body pt-9 pb-9">
                    <div class="table-responsive">
                        <table class="table table-row-bordered gy-5"
                               id="conversion-factors-table"
                               data-exclude-sort-columns="3"
                               data-length-menu="[5,10]"
                        >
                            <thead>
                            <tr class="fw-semibold fs-6 text-muted">
                                <th>Origin unit</th>
                                <th>Target unit</th>
                                <th>Factor</th>
                                <th scope="col" class="col-2"></th>
                            </tr>
                            </thead>
                            <tbody data-admin--shared--table-updater-target="updatableContent">
                            {% include 'admin/conversion_factors/_conversion-factors.html.twig' with {
                                conversionFactors
                            } %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!--start::Shared Modal container -->
        {% include 'shared/_modal-form.html.twig' with { modal_title: 'Conversion Factor'} %}
        <!--end::Shared Modal container -->
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script type="module">
        import DataTable from "datatables.net-bs5"

        new DataTable("table", {
            columnDefs: [{orderable: false, targets: 3}],
            order: [[0, 'asc']]
        });
    </script>
{% endblock %}
