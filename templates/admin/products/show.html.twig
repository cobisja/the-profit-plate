{% extends 'layouts/admin.html.twig' %}

{% block title %}FBC - Products{% endblock %}

{% block page_title %}
    {% include 'layouts/layout/partials/_page-title.html.twig' with {
        title: 'FBC',
        breadcrumbs: [
            { 'Home': path('app_admin_dashboard') },
            { 'Products': path('app_admin_products_index') },
            'Show'
        ]
    } %}
{% endblock %}

{% block content %}
    <div class="row g-7"
         data-controller="admin--products--price-variations-chart admin--shared--image-zoom"
         data-admin--products--price-variations-chart-url-value="{{ path('app_admin_products_price_variations_chart_show', {
             id: product.id
         }) }}"
    >
        <div class="offset-xl-3 col-xl-6">
            <div class="card card-flush h-lg-100" id="product-details">
                <!--begin::Card header-->
                <div class="card-header pt-7" id="kt_chat_contacts_header">
                    <!--begin::Card title-->
                    <div class="card-title">
                        <i class="ki-duotone ki-tablet-text-up fs-1 me-2">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                        <h2>Product Details</h2>
                    </div>
                    <!--end::Card title-->
                    <!--begin::Card toolbar-->
                    <div class="card-toolbar gap-3">
                        <a href="{{ path('app_admin_products_index') }}"
                           class="btn btn-sm btn-light btn-active-light-primary"
                        ><i class="ki-duotone ki-exit-left fs-2">
                                <span class="path1"></span>
                                <span class="path2"></span>
                            </i>Products</a>
                        <a href="{{ path('app_admin_products_edit', { id: product.id }) }}"
                           class="btn btn-sm btn-light btn-active-light-primary"
                        ><i class="ki-duotone ki-pencil fs-2 me-1">
                                <span class="path1"></span>
                                <span class="path2"></span>
                            </i>Edit</a>
                        <!--begin::Action menu-->
                        <a href="#" class="btn btn-sm btn-icon btn-light btn-active-light-primary"
                           data-kt-menu-trigger="click"
                           data-kt-menu-placement="bottom-end"
                        >
                            <i class="ki-duotone ki-dots-square fs-2">
                                <span class="path1"></span>
                                <span class="path2"></span>
                                <span class="path3"></span>
                                <span class="path4"></span>
                            </i>
                        </a>
                        <!--begin::Menu-->
                        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4"
                             data-kt-menu="true"
                        >
                            <!--begin::Menu item-->
                            <!--begin::Menu item-->
                            <div class="menu-item px-3">
                                <twig:delete-link
                                        url="{{ path('app_admin_products_delete', { id: product.id }) }}"
                                        redirect_url="{{ path('app_admin_products_index') }}"
                                        class="menu-link px-3 text-danger"
                                        icon="<i class='ki-duotone ki-trash fs-2 text-danger me-2'><span class='path1'></span><span class='path2'></span><span class='path3'></span><span class='path4'></span><span class='path5'></span></i>"
                                        csrfTokenId="{{ csrf_token('delete' ~ product.id) }}"
                                        method="delete"
                                />
                            </div>
                            <!--end::Menu item-->
                            <div class="separator border-2"></div>
                            <!--begin::Menu item-->
                            <div class="menu-item px-3">
                                <a href="{{ path('app_admin_products_new') }}" class="menu-link px-3">
                                    <i class="ki-duotone ki-plus fs-2 me-1"></i>
                                    New
                                </a>
                            </div>
                            <!--end::Menu item-->
                        </div>
                        <!--end::Menu-->
                        <!--end::Action menu-->
                    </div>
                    <!--end::Card toolbar-->
                    {% include 'shared/_flash-messages.html.twig' %}
                </div>
                <!--end::Card header-->
                <!--begin::Card body-->
                <div class="card-body pt-5">
                    <div class="d-flex gap-7 align-items-center">
                        <div class="symbol symbol-circle symbol-150px cursor-pointer"
                             data-action="click->admin--shared--image-zoom#zoomImage"
                        >
                            <img src="{{ asset(uploads_folder ~ '/products/' ~ product.picture) }}"
                                 width="150"
                                 alt="{{ product.name }}"
                                 class="zoom-image"
                            >
                        </div>
                        <div class="d-flex flex-column gap-2">
                            <!--begin::Name-->
                            <h3 class="mb-0">{{ product.name|capitalize }}</h3>
                            <div class="d-flex align-items-center gap-2">
                                <i class="ki-duotone ki-notepad-edit fs-2">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                </i>
                                <a href="#" class="text-muted text-hover-primary"
                                >{{ product.updatedAt|ago }}</a>
                            </div>
                        </div>
                    </div>
                    <!--begin:::Tabs-->
                    <ul class="nav nav-custom nav-tabs nav-line-tabs nav-line-tabs-2x fs-6 fw-semibold mt-6 mb-8 gap-2"
                        role="tablist"
                    >
                        <!--begin:::Tab item-->
                        <li class="nav-item" role="presentation">
                            <a class="nav-link text-active-primary d-flex align-items-center pb-4 active"
                               data-bs-toggle="tab"
                               href="#products_general_info"
                               aria-selected="true"
                               role="tab"
                            >
                                <i class="ki-duotone ki-home fs-4 me-1"></i>General</a>
                        </li>
                        <!--end:::Tab item-->
                        <!--begin:::Tab item-->
                        <li class="nav-item" role="presentation">
                            <a class="nav-link text-active-primary d-flex align-items-center pb-4"
                               data-bs-toggle="tab"
                               href="#products_price_variation"
                               aria-selected="false"
                               role="tab" tabindex="-1"
                            >
                                <i class="ki-duotone ki-graph-up fs-4 me-1">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                    <span class="path3"></span>
                                    <span class="path4"></span>
                                    <span class="path5"></span>
                                    <span class="path6"></span>
                                </i>
                                Price variations</a>
                        </li>
                        <!--end:::Tab item-->
                        <!--begin:::Tab item-->
                        <li class="nav-item" role="presentation">
                            <a class="nav-link text-active-primary d-flex align-items-center pb-4"
                               data-bs-toggle="tab"
                               href="#products_related_recipes"
                               aria-selected="false"
                               role="tab" tabindex="-1"
                            >
                                <i class="ki-duotone ki-text-number fs-4 me-1">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                    <span class="path3"></span>
                                    <span class="path4"></span>
                                    <span class="path5"></span>
                                    <span class="path6"></span>
                                </i>
                                Related recipes</a>
                        </li>
                        <!--end:::Tab item-->
                    </ul>
                    <!--end:::Tabs-->
                    <!--begin::Tab content-->
                    <div class="tab-content" id="">
                        <!--begin:::Tab pane-->
                        <div class="tab-pane fade active show" id="products_general_info" role="tabpanel">
                            {% include 'admin/products/show/_general-infol.html.twig' with { product } %}
                        </div>
                        <!--end:::Tab pane-->
                        <!--begin:::Tab pane-->
                        <div class="tab-pane fade" id="products_price_variation" role="tabpanel">
                            {% include 'admin/products/show/_price-variations.html.twig' with {
                                current_price: product.pricePerUnit,
                                price_variations: product.priceVariations
                            } %}
                        </div>
                        <!--end:::Tab pane-->
                        <!--begin:::Tab pane-->
                        <div class="tab-pane fade" id="products_related_recipes" role="tabpanel">
                            {% include 'admin/products/show/_related-recipes.html.twig' %}
                        </div>
                        <!--end:::Tab pane-->
                    </div>
                    <!--end::Tab content-->
                </div>
                <!--end::Card body-->
            </div>
        </div>
        {% include 'admin/products/show/_price-variations-chart-modal.html.twig' with { product } %}
        {% include 'shared/_modal-zoom-image.html.twig' %}
    </div>
{% endblock %}
