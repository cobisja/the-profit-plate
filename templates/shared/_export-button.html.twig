<div data-controller="admin--shared--export-buttons">
    <!--begin::Export dropdown-->
    <button type="button" class="btn btn-sm btn-light-primary me-3" data-kt-menu-trigger="click"
            data-kt-menu-placement="bottom-end">
        <i class="ki-duotone ki-exit-up fs-2">
            <span class="path1"></span>
            <span class="path2"></span>
        </i>{{ button_title|default('Export Report') }}
    </button>
    <!--begin::Menu-->
    <div id="export-menu"
         class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-200px py-4"
         data-kt-menu="true">
        {% for format, title in export_options|default([]) %}
            <div class="menu-item px-3">
                <a href="#"
                   class="menu-link px-3"
                   data-export-format="{{ format }}"
                   data-action="admin--shared--export-buttons#export"
                >{{ title }}</a>
            </div>
        {% endfor %}
    </div>
    <!--end::Menu-->
    <!--end::Export dropdown-->
    <div id="dtButtons" class="d-none" data-admin--shared--export-buttons-target="dtButtonsContainer"></div>
</div>