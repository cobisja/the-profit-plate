<div data-controller="admin--shared--modal-filter">
    <!--begin::Filter-->
    <button type="button" class="btn btn-sm btn-light-primary me-3" data-kt-menu-trigger="click"
            data-kt-menu-placement="bottom-end">
        <i class="ki-duotone ki-filter fs-2">
            <span class="path1"></span>
            <span class="path2"></span>
        </i>Filter
    </button>
    <!--begin::Menu 1-->
    <div class="menu menu-sub menu-sub-dropdown w-300px w-md-325px" data-kt-menu="true">
        <!--begin::Header-->
        <div class="px-7 py-5">
            <div class="fs-4 text-gray-900 fw-bold">Filter Options</div>
        </div>
        <!--end::Header-->
        <!--begin::Separator-->
        <div class="separator border-gray-200"></div>
        <!--end::Separator-->
        <!--begin::Content-->
        <div class="px-7 py-5">
            <!--begin::Input group-->
            <div class="mb-10">
                <!--begin::Label-->
                <label class="form-label fs-5 fw-semibold mb-3">{{ filter_title }}</label>
                <!--end::Label-->
                <!--begin::Options-->
                <div class="d-flex flex-column flex-wrap fw-semibold">
                    <!--begin::Option-->
                    {% for option in options %}
                        <label class="form-check form-check-sm form-check-custom form-check-solid mb-3 me-5">
                            <input class="form-check-input"
                                   type="radio"
                                   name="filter_option"
                                   value="{{ option }}"
                                   data-admin--shared--modal-filter-target="filterSelection"
                            >
                            <span class="form-check-label text-gray-600">{{ option|capitalize }}</span>
                        </label>
                    {% endfor %}
                    <!--end::Option-->
                </div>
                <!--end::Options-->
            </div>
            <!--end::Input group-->
            <!--begin::Actions-->
            <div class="d-flex justify-content-end">
                <button type="reset"
                        class="btn btn-light btn-active-light-primary me-2"
                        data-kt-menu-dismiss="true"
                        data-action="admin--shared--modal-filter#resetFilter"
                >Reset
                </button>
                <button type="submit" class="btn btn-primary"
                        data-kt-menu-dismiss="true"
                        data-action="admin--shared--modal-filter#applyFilter"
                >Apply
                </button>
            </div>
            <!--end::Actions-->
        </div>
        <!--end::Content-->
    </div>
    <!--end::Menu 1-->
    <!--end::Filter-->
</div>